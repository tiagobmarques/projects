pipeline {
  agent any

  stages {
    stage('Download sources'){
      steps{
        checkout scm
      }
    }

    stage("Build") {
      steps {
        sh "cd server-discovery && chmod +x gradlew && ./gradlew build"
      }
    }

    stage("Update Database") {
      steps {
        sh "cd server-discovery && chmod +x gradlew && ./gradlew flywaymigrate -i"
      }
    }

    stage("Docker Push") {
      steps {
        sh "cd server-discovery && sudo docker build -t server-discovery:latest . && sudo docker tag server-discovery:latest tiagobm564/server-discovery:latest && sudo docker login --username ${DOCKER_USER} --password ${DOCKER_PWD} && sudo docker push tiagobm564/server-discovery:latest"
      }
    }

    stage("Docker Run") {
      steps {
        script {
          sshagent(credentials : ['tax-devops-server-deploy']) {
            sh "echo Connecting to the remote server"
            sh '''ssh -t -t ubuntu@ip-10-0-16-12.ec2.internal -o StrictHostKeyChecking=no << EOF
            #!/bin/bash
            echo ${REMOTE_HOST}
            echo Connected to Server Discovery App
            echo Stopping container
            sudo docker stop -t 0 \\$(sudo docker ps -q)
            sudo docker container prune --force
            echo Removing image
            sudo docker rmi tiagobm564/server-discovery:latest
            sudo docker run -d -p 8080:8080 tiagobm564/server-discovery:latest
            echo Start Template Application Running!!!
            exit
            EOF'''
          }
        }
      }
    }
  }

  post {
    always {
      cleanWs()
    }
  }
}